<%= form_for :Movie do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :Format %><br>
    <%= f.text_area :format %>
  </p>
   <p>
     <%= f.label :Length %><br>
     <%= f.text_area :length %>
  </p>
  <p>
    <%= f.label(:post, :title, "Release Year") %><br>
    <%= f.text_area :release_yaer %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>