<%= form_for :movie, url: movies_path do |f| %>
  <p>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
     <%= f.label :Format %><br>
    <%= f.select :format, [['VHS','VHS'],['DVD','DVD'],['Streaming','Streaming']] %>    
  </p>   
  
   <p>
     <%= f.label :Length %><br>
     <%= f.text_field :length %>
  </p>
  <p>
    <%= f.label :release_year, "Release Year" %><br>
    <%= f.text_field :release_year %>
  </p>
  <p>
      <%= f.label :Rating %><br>
      <%= radio_button_tag(:rating, "1") %>
      <%= label_tag(:rating, "1") %>
      <%= radio_button_tag(:rating, "2") %>
      <%= label_tag(:rating, "2") %>
      <%= radio_button_tag(:rating, "3") %>
      <%= label_tag(:format, "3") %>
      <%= radio_button_tag(:rating, "4") %>
      <%= label_tag(:format, "4") %>
      <%= radio_button_tag(:rating, "5") %>
      <%= label_tag(:format, "5") %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>