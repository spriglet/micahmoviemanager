<h1>Movie List</h1>
<%= link_to 'New movie', new_movie_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Release Year</th>
    <th>Length</th>
    <th>Rating</th>
    <th>Format</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.release_year %></td>
      <td><%= movie.length %></td>
      <td><%= movie.rating %></td>
      <td><%= movie.format %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    </tr>
  <% end %>
</table>