<h1>Movie List</h1>
<%= link_to 'Add Movie', new_movie_path , :class => 'btn btn-default btn-primary btn-lg' %>
<p class='directions'> To sort movies click on the column name you would like to sort. </p>
<table>
  <tr>
    <th><%= sortable "title" %></th>
    <th><%= sortable "release_year","Release Year" %></th>
    <th><%= sortable "length" %></th>
    <th><%= sortable "rating" %></th>
    <th><%= sortable "format" %></th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <% for movie in @movies %>
    <tr>
      <td class='movieTitle'><%= movie.title %></td>
      <td><%= movie.release_year %></td>
      <td><%= movie.length %></td>
      <td><%= movie.rating %></td>
      <td><%= movie.format %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
      <td><%= link_to 'Delete', movie_path(movie),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>